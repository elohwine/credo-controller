# ============================================
# IdenEx Credentis - Local Development Environment
# OID4VC + DIDComm Verifiable Commerce Platform
# ============================================

# ============================================
# WHATSAPP BUSINESS API (Meta Cloud API)
# ============================================
# Get credentials from https://developers.facebook.com
WABA_PHONE_NUMBER_ID=
WABA_TOKEN=
WABA_NUMBER=

# ============================================
# ECOCASH PAYMENT GATEWAY
# ============================================
ECOCASH_API_KEY=
ECOCASH_MERCHANT_NUMBER=
ECOCASH_WEBHOOK_SECRET=
ECOCASH_SANDBOX=true

# ============================================
# NGROK TUNNEL (auto-starts in dev)
# ============================================
# Set ENABLE_NGROK=false to disable auto-start
ENABLE_NGROK=true
NGROK_AUTHTOKEN=
NGROK_URL=

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Server URL (used for credential offers, DID resolution)
SERVER_URL=http://localhost:3000

# ============================================
# RATE LIMITING
# ============================================
windowMs=1000
maxRateLimit=1000

# ============================================
# DATABASE / PERSISTENCE
# ============================================
# SQLite database path (relative to project root)
PERSISTENCE_DB_PATH=data/persistence.db

# ============================================
# WALLET / AGENT CONFIGURATION
# ============================================
# Wallet storage type (sqlite is default for Askar)
WALLET_STORAGE_TYPE=sqlite

# Agent label (shown to peers)
AGENT_LABEL=IdenEx Credentis

# Wallet key (auto-generated if not set)
# WALLET_KEY=your-secure-wallet-key

# ============================================
# CONNECTION TIMEOUTS
# ============================================
CONNECT_TIMEOUT=30000
MAX_CONNECTIONS=100
IDLE_TIMEOUT=60000

# ============================================
# TENANT / SESSION LIMITS
# ============================================
# Max number for session acquire timeout (2147483647 max)
SESSION_ACQUIRE_TIMEOUT=
SESSION_LIMIT=
INMEMORY_LRU_CACHE_LIMIT=500

# ============================================
# OPENTELEMETRY (Optional)
# ============================================
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_SERVICE_NAME=credo-controller
# OTEL_TRACES_EXPORTER=otlp
# OTEL_METRICS_EXPORTER=otlp
# OTEL_LOGS_EXPORTER=otlp

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug

# ============================================
# JWT / AUTH
# ============================================
# JWT secret for API authentication (auto-generated if not set)
# JWT_SECRET=your-jwt-secret

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================
# Schema Manager contract address (for did:ethr)
SCHEMA_MANAGER_CONTRACT_ADDRESS=
# DID contract address (for did:ethr)
DID_CONTRACT_ADDRESS=
# RPC URL for blockchain (for did:ethr)
RPC_URL=
# File Server Token
FILE_SERVER_TOKEN=
